<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/prescription_list_item_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginBottom="10dp"
    android:layout_marginHorizontal="10dp"
    android:elevation="8dp"
    android:padding="10dp"
    app:cardUseCompatPadding="true"
    card_view:cardCornerRadius="4dp">

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="159dp"
                android:layout_height="wrap_content"
                android:contentDescription="@string/medication_img"
                android:src="@drawable/centrum_otc" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/rubik_regular" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="22dp"
                        android:layout_marginEnd="2dp"
                        android:layout_marginStart="4dp"
                        android:contentDescription="@string/quantity_pill_icon"
                        android:src="@drawable/pill_icon" />

                    <TextView
                        android:id="@+id/prescription_list_item_quantity"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="4dp"
                        android:layout_marginStart="2dp"
                        android:fontFamily="@font/rubik_regular"
                        android:textColor="#838383"
                        android:textSize="14sp" />

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="19dp"
                        android:layout_marginEnd="2dp"
                        android:layout_marginStart="4dp"
                        android:contentDescription="@string/refills_vial_icon"
                        android:src="@drawable/vial_icon" />

                    <TextView
                        android:id="@+id/prescription_list_item_refills"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="4dp"
                        android:layout_marginStart="2dp"
                        android:fontFamily="@font/rubik_regular"
                        android:textColor="#838383"
                        android:textSize="14sp" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <TextView
                    android:id="@+id/prescription_list_item_title_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/rubik_medium"
                    android:textColor="#442B2D"
                    android:textSize="28sp" />

                <TextView
                    android:id="@+id/prescription_list_item_subtitle_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/rubik_regular"
                    android:textColor="#838383"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <TextView
                    android:id="@+id/prescription_list_item_dose_text"
                    android:layout_width="185dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/rubik_regular"
                    android:textColor="#442B2D" />

                <TextView
                    android:id="@+id/prescription_list_item_instructions_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/rubik_regular"
                    android:textColor="#442B2D" />
            </LinearLayout>
        </LinearLayout>
    </android.support.design.widget.CoordinatorLayout>
</android.support.v7.widget.CardView>